<link rel="stylesheet" href="/css/style.css">

<H2>Available Appointments</H2>

<div class="container">
<br>
<form action="/patient/schedule" method="POST">
  <div>
    <table class="table center80">
        <thead>
          <tr>
            <th>Provider</th>
            <th>Date</th>
            <th>From</th>
            <th>To</th>
            <th>Distance</th>
          </tr>
        </thead>
        <tbody>
            <%
            for ( var ii = 0; ii < availAppts.length; ii++ )
            {
                %><tr>
                    <td>
                        <input type="radio" name="appt_id" id="radio<%= ii %>" value="<%= availAppts[ii].appt_id %>" />
                        <label for="radio<%= ii %>"> <%= availAppts[ii].name %> </label>
                    </td>
                    <td>
                        <%= availAppts[ii].appt_date.toLocaleDateString('en-us', {weekday: 'long'}) %>
                        <%= availAppts[ii].appt_date.toLocaleDateString('en-us') %>
                    </td>
                    <td align="cener">
                        <%= availAppts[ii].from_time %>:00
                    </td>
                    <td align="cener">
                        <%= availAppts[ii].to_time %>:00
                    </td>
                    <td align="right">
                        <%= availAppts[ii].distance %>
                    </td>
                </tr>
                <%
            }
            %>
            <tr><td colspan="5">&nbsp;</td></tr>
            <tr><td align="center" colspan="5"><button type="submit">Submit</button></td></tr>
        </tbody>
    </table>
  </div>
</form>

<br>
